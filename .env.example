# Vizzy Configuration
# Copy this file to .env and adjust values for your environment

# PostgreSQL connection string (required)
VIZZY_DATABASE_URL=postgresql://username:password@localhost/vizzy

# Path to your NixOS flake configuration (required)
# Used for discovering hosts and reading system packages
VIZZY_NIX_CONFIG_PATH=/path/to/your/nixos-config

# Server binding (optional, defaults shown)
VIZZY_HOST=127.0.0.1
VIZZY_PORT=8000

# Debug mode (optional, default: false)
VIZZY_DEBUG=false
